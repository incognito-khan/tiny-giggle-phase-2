generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Admin {
  id              String     @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  email           String     @unique
  password        String
  categories      Category[]
  subCategories   SubCategory[]
  musicCategories MusicCategory[]
  musicSubCategories  MuiscSubCategory[]
  milestone       Milestone[]
  messages           Message[]
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  @@map("admins")
}

model Category {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  slug           String    @unique
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  admin          Admin     @relation(fields: [adminId], references: [id], onDelete: Cascade)
  adminId        String    @db.ObjectId
  products       Product[]
  subCategories  SubCategory[]
  suppliers      Supplier[]
  status         Status      @default(INACTIVE)

  isDeleted      Boolean      @default(false)
  deletedAt      DateTime?

  @@map("categories")
}

model SubCategory {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  name        String  
  slug        String      @unique
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  admin       Admin       @relation(fields: [adminId], references: [id], onDelete: Cascade)
  adminId     String      @db.ObjectId
  parent      Category    @relation(fields: [parentId], references: [id], onDelete: Cascade)
  parentId    String      @db.ObjectId
  products    Product[]
  suppliers   Supplier[]
  status      Status      @default(INACTIVE)

  isDeleted   Boolean     @default(false)
  deletedAt   DateTime?

  @@map("sub_categories")
}

model MusicCategory {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  slug           String    @unique
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  admin          Admin     @relation(fields: [adminId], references: [id], onDelete: Cascade)
  adminId        String    @db.ObjectId
  musics         Music[]
  subCategories  MuiscSubCategory[]
  status         Status @default(INACTIVE)
  artists        Artist[]

  isDeleted      Boolean      @default(false)
  deletedAt      DateTime?

  @@map("music_categories")
}

model MuiscSubCategory {
  id          String           @id @default(auto()) @map("_id") @db.ObjectId
  name        String       
  slug        String           @unique
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  admin       Admin            @relation(fields: [adminId], references: [id], onDelete: Cascade)
  adminId     String           @db.ObjectId
  parent      MusicCategory    @relation(fields: [parentId], references: [id], onDelete: Cascade)
  parentId    String           @db.ObjectId
  music       Music[]
  status      Status           @default(INACTIVE)
  artists     Artist[]
  isDeleted   Boolean          @default(false)
  deletedAt   DateTime?

  @@map("music_sub_categories")
}

model Product {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  slug          String      @unique
  image         String?
  costPrice     Float?
  salePrice     Float
  quantity      Int
  taxPercent    Float
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  category      Category    @relation(fields: [categoryId], references: [id])
  categoryId    String      @db.ObjectId
  subCategory   SubCategory @relation(fields: [subCategoryId], references: [id])
  subCategoryId String      @db.ObjectId
  favorites     ProductFavorite[]

  listedById    String?   @db.ObjectId
  listedBy      Supplier?   @relation(fields: [listedById], references: [id], onDelete: Cascade)

  isDeleted     Boolean      @default(false)
  deletedAt     DateTime?

  orderProducts OrderItem[]
  cartItems     CartItem[]

  @@map("products")
}

model Cart {
  id          String         @id @default(auto()) @map("_id") @db.ObjectId

  items       CartItem[]

  parent      Parent?         @relation(fields: [parentId], references: [id])
  parentId    String?         @db.ObjectId

  relative    ChildRelation?  @relation(fields: [relativeId], references: [id])
  relativeId  String?         @db.ObjectId

  isDeleted  Boolean          @default(false)
  deletedAt  DateTime?

  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@map("carts")
}

model CartItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  cart      Cart     @relation(fields: [cartId], references: [id])
  cartId    String   @db.ObjectId
  product   Product  @relation(fields: [productId], references: [id])
  productId String   @db.ObjectId
  quantity  Int
  price     Float

  isDeleted Boolean  @default(false)
  deletedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([cartId, productId])
  @@map("cart_items")
}

model Order {
  id              String          @id @default(auto()) @map("_id") @db.ObjectId
  trackingNumber  String          @unique
  parent          Parent?         @relation(fields: [parentId], references: [id])
  parentId        String?         @db.ObjectId
  relative        ChildRelation?  @relation(fields: [relativeId], references: [id])
  relativeId      String?         @db.ObjectId
  shippingAddress String
  totalPrice      Float
  orderStatus     OrderStatus     @default(PENDING)
  paymentStatus   PaymentStatus
  orderItems      OrderItem[]

  isDeleted       Boolean         @default(false)
  deletedAt       DateTime?

  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  @@map("orders")
}

model OrderItem {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  order     Order     @relation(fields: [orderId], references: [id])
  orderId   String    @db.ObjectId
  quantity  Int 
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  product   Product   @relation(fields: [productId], references: [id])
  productId String    @db.ObjectId
 
  isDeleted Boolean   @default(false)
  deletedAt DateTime?

  @@map("order_items")
}

model Parent {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  email      String      @unique
  type       ParentType
  password   String
  isVerified Boolean     @default(false)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  parentOTP  ParentOTP[]
  issues     Issue[]
  comments   Comment[]
  country    Country?

  children           Child[]           @relation(fields: [childIds], references: [id])
  childIds           String[]          @db.ObjectId
  messages           Message[]
  chats              Chat[]
  chatParticipants   ChatParticipant[]
  milestoneProgress  ChildMilestoneProgress[]
  queries            Query[]

  folders          Folder[] @relation("ParentFolders") 
  uploadedImages   Image[]  @relation("ParentImages")
  Folder           Folder[]
  activities       Activity[]
  feedSchedules    FeedSchedule[]
  babySleep        BabySleep[]
  productFavorites ProductFavorite[]
  musicFavorites MusicFavorite[]
  carts            Cart[]
  orders           Order[]
  purchasedMusic   PurchasedMusic[]

  isDeleted          Boolean      @default(false)
  deletedAt          DateTime?

  @@map("parents")
}

model Supplier {
  id                 String       @id @default(auto()) @map("_id") @db.ObjectId
  name               String
  password           String
  cnic               String
  email              String       @unique
  country            String
  state              String
  city               String
  status             Status      @default(INACTIVE)
  subscription       String?
  category           Category     @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId         String       @db.ObjectId
  subCategory        SubCategory  @relation(fields: [subCategoryId], references: [id], onDelete: Cascade)
  subCategoryId      String       @db.ObjectId
  products           Product[]
  messages           Message[]
  
  supplierOTP        SupplierOTP[]

  isDeleted          Boolean      @default(false)
  deletedAt          DateTime?
  
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt

  @@map("supplier")
}

model Artist {
  id                 String       @id @default(auto()) @map("_id") @db.ObjectId
  name               String
  password           String
  cnic               String
  email              String       @unique
  country            String
  state              String
  city               String
  status             Status      @default(INACTIVE)
  subscription       String?
  category           MusicCategory     @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId         String       @db.ObjectId
  subCategory        MuiscSubCategory  @relation(fields: [subCategoryId], references: [id], onDelete: Cascade)
  subCategoryId      String       @db.ObjectId
  music              Music[]
  messages           Message[]

  artistOTP          ArtistOTP[]

  isDeleted          Boolean      @default(false)
  deletedAt          DateTime?
  
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt

  @@map("artist")
}

model Query {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  email           String
  subject         String
  message         String
  status          QueryStatus  @default(PENDING)
  priority        Priority     @default(LOW)
  parent          Parent       @relation(fields: [parentId], references: [id], onDelete: Cascade)
  parentId        String       @db.ObjectId

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@map("query")
}

